<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".UpdateUserActivity">

    <ImageView
        android:id="@+id/userUpdateProfileImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/account_box" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="To select profile piture , click on image"
        android:textColor="#000000"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editTextUpdateName"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="text"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextUpdateAge"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Age"
        android:inputType="number"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editTextUpdateEmailSignUp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonUpdateUser"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:text="Update User"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progressBarUpdateUser"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        tools:visibility="visible" />
</LinearLayout>